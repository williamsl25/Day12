%h1 Hospital form
- @hospital.inspect
%br
  = form_for @hospital do |f|
    - if @hospital.errors.any?
      - @hospital.errors.full_messages.each do |message|
        = message
        %br
  .div
    = form_for [@hospital] do |f|
      .form-group
        %strong= f.label :name
        = f.text_field :name, class: "form-control"
        %span.error_name
          Name required
      .form-group
        %strong= f.label :address
        = f.text_field :address, class: "form-control"
      %br
      .form-group
        = f.label :city
        = f.text_field :city, class: "form-control"
      %br
      .form-group      
        = f.label :state
        = f.select :state,options_for_select( Hospital:: STATE_OPTIONS, f.object.state), include_blank: "---select---" |
      %br         
        = f.label :zip
        = f.text_field :zip
      %br
                      
        = f.label :phone
        = f.text_field :phone
      %br
        = f.submit "Submit", class: "submit_btn", disabled: 'disabled'
      
        = link_to "Cancel", root_path


                         
      
       